<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- عند الضغط -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D26EFF" />
            <corners android:radius="24dp" />
            <stroke android:width="2dp" android:color="#9A4ACC"/>
        </shape>
    </item>

    <!-- الحالة العادية -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E3A8FF" />
            <corners android:radius="24dp" />
            <stroke android:width="2dp" android:color="#B86DFF"/>
        </shape>
    </item>

</selector>

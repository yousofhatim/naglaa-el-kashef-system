<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addEmployee">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0E0E6" />



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <Button
            android:id="@+id/again"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="اعادة تنشيط"
            android:visibility="invisible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/ok"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="تسجيل"/>



        <Button
            android:id="@+id/studentPhoto"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="صورة الطالب"/>

        <EditText
            android:id="@+id/kidName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="اسم الموظف رباعي"/>

        <EditText
            android:id="@+id/fatherId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="الرقم القومي للموظف"
            android:inputType="number"/>



        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="رقم هاتف الموظف"
            android:inputType="number"
            />

        <EditText
            android:id="@+id/phone2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="رقم هاتف إضافي"
            android:inputType="number"
            />



        <EditText
            android:id="@+id/kidID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:enabled="false"
            />

        <EditText
            android:id="@+id/fingerId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="رقم البصمة يتم ملئها تلقائيا"
            android:enabled="true"/>

        <Button
            android:id="@+id/go"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="ادخال البصمات"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>